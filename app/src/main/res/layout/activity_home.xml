<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:id="@+id/linerTop"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:background="@color/colorAccent"
            android:onClick="decr"
            android:scaleType="centerCrop"
            android:src="@drawable/left"
            tools:ignore="ContentDescription,Left Button" />

        <TextView
            android:id="@+id/CoffeeTypeTextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:enabled="false"
            android:fontFamily="cursive"
            android:text="Coffee ?"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="35sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:background="@color/colorAccent"
            android:onClick="incr"
            android:scaleType="centerCrop"
            android:src="@drawable/right"
            tools:ignore="ContentDescription,Right Button" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linerbttm"
        android:layout_below="@id/linerTop"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.70">

            <ImageView
                android:id="@+id/coffeePicture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/icon" />

            <TextView
                android:id="@+id/coffeePriceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/coffeePicture"
                android:layout_alignParentBottom="true"
                android:layout_margin="15dp"
                android:background="@drawable/roundedcorner"
                android:fontFamily="sans-serif"
                android:padding="10dp"
                android:text="Rs. 300"
                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="invisible" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="0.25"
                    android:background="@drawable/roundedcorner"
                    android:scaleType="centerCrop"
                    android:src="@drawable/remove"
                    android:onClick="qdecr"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:fontFamily="cursive"
                        android:padding="5dp"
                        android:text="Quantity"
                        android:textAlignment="center"
                        android:textColor="@color/colorAccent"
                        android:textSize="35sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/showQuantity"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.75"
                        android:fontFamily="cursive"
                        android:text="1"
                        android:textAlignment="center"
                        android:textColor="@color/colorAccent"
                        android:textSize="35sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="0.25"
                    android:background="@drawable/roundedcorner"
                    android:scaleType="centerCrop"
                    android:src="@drawable/add"
                    android:onClick="qincr"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/xtraChinaTextView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/buttonround"
                    android:fontFamily="cursive"
                    android:text=" extra \n cinnamon"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:onClick="xtraChina"
                    />

                <TextView
                    android:id="@+id/xtraChoco"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/buttonround"
                    android:fontFamily="cursive"
                    android:text="chocolate\n syrup"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:onClick="XtraChoco"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/small"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="2dp"
                    android:layout_marginStart="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/buttonround"
                    android:fontFamily="cursive"
                    android:scaleType="centerCrop"
                    android:text="S"
                    android:textSize="50sp"
                    android:textStyle="bold"
                    android:onClick="sizeS"/>

                <Button
                    android:id="@+id/medium"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="2dp"
                    android:layout_marginStart="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/buttonround"
                    android:fontFamily="cursive"
                    android:scaleType="centerCrop"
                    android:text="M"
                    android:textSize="50sp"
                    android:textStyle="bold"
                    android:onClick="sizeM"/>

                <Button
                    android:id="@+id/large"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="2dp"
                    android:layout_marginStart="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/buttonround"
                    android:fontFamily="cursive"
                    android:scaleType="centerCrop"
                    android:text="L"
                    android:textSize="50sp"
                    android:textStyle="bold"
                    android:onClick="sizeL"/>

                <Button
                    android:id="@+id/Xlarge"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="2dp"
                    android:layout_marginStart="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/buttonround"
                    android:fontFamily="cursive"
                    android:scaleType="centerCrop"
                    android:text="XL"
                    android:textSize="50sp"
                    android:textStyle="bold"
                    android:onClick="sizeXL"/>

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <!--<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_margin="20dp"
        android:id="@+id/testtv"
        android:text="98"
        android:textColor="@color/White"
        android:layout_below="@id/linerTop"/>-->
    <LinearLayout
        android:id="@+id/linerbttm"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:fontFamily="cursive"
            android:text="More Coffee"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:ignore="ButtonStyle,HardcodedText" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:fontFamily="cursive"
            android:text="Next"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:ignore="ButtonStyle,HardcodedText" />
    </LinearLayout>
</RelativeLayout>